@using Game.Web.Models.Account

@model SignInPostModel

@{
    Layout = "_AccountLayout";
}

<div class="unix-login">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-4">
                <div class="login-content card">
                    <div class="login-form">
                        <h4>登录</h4>
                        <form method="post" asp-antiforgery="true">
                            @if (ViewData.ModelState.ErrorCount > 0)
                            {
                                <div class="alert alert-danger">
                                    @foreach (var item in ViewData.ModelState)
                                    {
                                    <p>
                                        @if (item.Value.Errors.Count > 0)
                                        {
                                            foreach (var error in item.Value.Errors)
                                            {
                                                @error.ErrorMessage
                                                <br />
                                            }
                                        }
                                    </p>
                                    }
                                </div>
                            }
                            <div class="form-group">
                                <label>用户名</label>
                                <input type="text" class="form-control" placeholder="请输入用户名或邮件地址或手机号码" asp-for="@Model.Username">
                            </div>
                            <div class="form-group">
                                <label>密码</label>
                                <input type="password" class="form-control" placeholder="请输入密码" asp-for="@Model.Password">
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" asp-for="@Model.RememberMe" />记住密码
                                </label>
                            </div>
                            @if (Model.DisplayCaptcha)
    {
                        <div class="form-group">
                            <div class="captcha-box">
                                <game-captcha />
                            </div>
                        </div>
                        <input type="hidden" asp-for="@Model.DisplayCaptcha" />
}
                            <button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30">确定</button>
                            <div class="register-link m-t-15 text-center">
                                <p>没有帐号码? <a asp-controller="Account" asp-action="SignUp" asp-area="Admin">注册一个</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>